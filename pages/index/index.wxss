.post-card, .post-feed {
    display: -ms-flexbox;
    display: flex;
}

.post-card {
    -ms-flex: 1 1 300px;
    /* flex: 1 1 300px; */
    -ms-flex-direction: column;
    flex-direction: column;
    overflow: hidden;
    margin: 0 20px 20px;
    min-height: 300px;
    background: #fff 50%;
    background-size: cover;
    border-radius: 5px;
    box-shadow: 8px 14px 38px rgba(39, 44, 49, 0.06), 1px 3px 8px rgba(39, 44, 49, 0.03);
    transition: all 0.5s ease;
    width: 90%;
}

.post-card-image-link {
    /* position: relative; */
    display: block;
    overflow: hidden;
    border-radius: 5px 5px 0 0;
}

.post-card-content {
    -ms-flex-positive: 1;
    flex-grow: 1;
    display: -ms-flexbox;
    display: flex;
    -ms-flex-direction: column;
    flex-direction: column;
    -ms-flex-pack: justify;
    justify-content: space-between;
    width: 95%;
    height: 100%;
    /* border: 1px solid red; */
    margin: 5px auto;
}

.title {
    font-family: 微软雅黑;
    line-height: 1.15;
    font-weight: 700;
    text-rendering: optimizeLegibility;
    margin: 8px;
}

.summary {
    height: 100%;
    font-size: 13px;
    line-height: 1;
    font-family: 微软雅黑;
    margin: 0px 8px 8px 8px;
}

.footer {
    margin: 8px 8px 2px 8px;
}

.postDate {
    float: right;
    line-height: 30px;
    font-size: 10px;
    color: #738a94;
    font-family: 微软雅黑;
}

.qrcode {
    position: absolute;
    top: 5%;
    left: 5%;
    z-index: 100;
    width: 50rpx;
    height: 50rpx;
    background-image: url('data:image/svg+xml;base64,');
    background-repeat:no-repeat; /** 不重复*/
    background-size:contain; /**等比例缩放*/
}


/* 设置背景遮罩层样式 */
.mask {
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    z-index: 800;
}

.masks {
    width: 100%;
    background-color: white;
    position: absolute;
    left: -100%;
    opacity: 0;
}

.maskImg {
    width: 30%;
    float: left;
}

