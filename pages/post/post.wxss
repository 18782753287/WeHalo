/* pages/post/post.wxss */

.content {
    padding: 10px;
    padding-top:140rpx;
}

.top {
    /* padding-bottom: 10px; */
    border-bottom: 1px solid #ddd;
}

.titleTags {
    margin-left: 10px;
    margin-right: 10px;
    color: #ccc;
}

.titleData {
    /* float: right; */
    font-size: 12px;
    color: #ccc;
    line-height: 26px;
    text-align: right;
}

.stickyTitle {
    /* text-align:center; */
    font-size: 28px;
    font-weight: 700;
    padding: 5px;
    text-align: center;
}

.createPoster {
    float: right;
}

.sharePoster {
    position: fixed;
    bottom: 6%;
    right: 6%;
    opacity: 0.6;
    background-color:#000000;
    border-radius:35px;
    width:32px;
    height:32px;
    text-align:center;
    padding-top:2px;
    padding-right:2px;
}

.hide {
  display: none;
}
 
.show {
  display: block;
}


/**自定义导航栏**/
.nav {
    position: fixed;
    top: 0;
    /* background: url("https://blog.eunji.cn/upload/2018/11/code120181219113843975.png") no-repeat; */
    /* background-size: cover; */
    color: #000;
    width: 100%;
    height: 150rpx;
    z-index: 1020;
    background-color: #fff;
}

.nav-text {
    position: absolute;
    top: 50%;
    left: 68rpx;
    font-size: 15px;
    color: #000;
}

.return {
    z-index: 100;
    width: 36rpx;
    height: 36rpx;
    background-image:url('data:image/svg+xml;base64,');
    background-repeat:no-repeat; /** 不重复*/
    background-size:contain; /**等比例缩放*/
    z-index: 1030;
}

.nav-return {
    position: absolute;
    top: 52%;
    left:20rpx;
}

.message {
    position: absolute;
    top: 150rpx;
}

/** 弹幕评论样式 **/
.aon{
    position: absolute;
    white-space:nowrap;/* 防止向下换行*/
    animation-timing-function: linear;
    animation-fill-mode: none;
    background-color: rgb(112, 112, 112);
    font-family: 微软雅黑;
    padding-left: 15px;
    padding-right: 15px;
    padding-top: 2px;
    padding-bottom: 2px;
    font-size: 16px;
    opacity: 0.8;
    border-radius: 100px;
}

.doommview{
    position: fixed;
    z-index: 1030;
    height: 90%;
    width: 100%;
    bottom: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

@keyframes first{
    from{left: 100%;}
    to{left: -100%;}
}